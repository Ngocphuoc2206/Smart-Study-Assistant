{
  "compilerOptions": {
    "target": "ES2020",
    "lib": ["ES2020"],
    "module": "commonjs",
    "moduleResolution": "node",
    "esModuleInterop": true,

    "rootDir": ".",
    "outDir": "./dist/worker",

    "baseUrl": ".",
    "paths": {
      "@/*": ["./*"]
    },

    "types": ["node"],
    "skipLibCheck": true,

    "strict": false,
    "noImplicitAny": false
  },
  "include": ["worker/**/*", "shared/**/*"]
}
